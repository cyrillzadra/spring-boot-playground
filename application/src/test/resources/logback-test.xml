<configuration>
    <appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>%d %-5level %-50.50logger{50} [%thread] %msg %caller{1}</pattern>
        </encoder>
    </appender>

    <logger name="ch.tie" level="DEBUG"/>

    <root level="ERROR">
        <appender-ref ref="STDOUT"/>
    </root>
</configuration>
